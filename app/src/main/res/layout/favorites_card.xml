<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".presentation.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_background"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_next_rounded"
        android:gravity="center_horizontal"
        android:text="Category"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/explore_text"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:text="Explore the nightlife of your city"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <com.like.LikeButton
        android:id="@+id/btn_like_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="240dp"
        android:text="Free"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        android:text="Price &#128176;"
        android:textAllCaps="false"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_one_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_user_1" />

    <ImageView
        android:id="@+id/icon_two_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_user_2" />

    <ImageView
        android:id="@+id/icon_three_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_user_3" />

    <ImageView
        android:id="@+id/icon_three_plus_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_user_3_plus" />

    <ImageView
        android:id="@+id/icon_replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/ic_user_3_plus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="270dp"
        android:text="Participants"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="265dp"
        android:text="Accessibility"
        android:textAllCaps="false" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="250dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar"/>

</RelativeLayout>